<Window x:Class="PrihVPN.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PrihVPN" Height="500" Width="800" Background="#1E1E1E" Foreground="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Import VLESS" Command="{Binding ImportCommand}" Margin="5" Padding="10,5"/>
            <Button Content="Add WireGuard" Command="{Binding ImportWgCommand}" Margin="5" Padding="10,5"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Servers}" SelectedItem="{Binding SelectedServer}" 
                  AutoGenerateColumns="False" Background="#2D2D2D" Foreground="White" RowBackground="#2D2D2D">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="{Binding Status}" VerticalAlignment="Center" Margin="0,0,20,0" FontWeight="Bold"/>
            <Button Content="CONNECT" Command="{Binding ConnectCommand}" Background="#007ACC" Foreground="White" Width="100" Height="30" Margin="5"/>
            <Button Content="STOP" Command="{Binding DisconnectCommand}" Background="#D32F2F" Foreground="White" Width="100" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
